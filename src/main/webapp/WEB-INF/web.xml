<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://jakarta.ee/xml/ns/jakartaee
         http://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <!-- DÃ©claration du DispatcherServlet de ton framework -->
    <servlet>
        <servlet-name>FrontServlet</servlet-name>
        <servlet-class>com.projet_framework.FrontServlet</servlet-class>
    </servlet>

    <!-- Mappage : intercepte toutes les URLs -->
    <servlet-mapping>
        <servlet-name>FrontServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

</web-app>
